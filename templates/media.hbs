<div class="media-inner component-inner" role="region" aria-label="{{_globals._components._media.ariaRegion}} {{#if _media.transcriptLink}}{{_globals._components._media.transcriptButton}}{{/if}}" {{#if _globals._components._media.ariaRegion}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="media-widget component-widget a11y-ignore-aria">

    {{#if _media.mp3}}
      <audio src="{{_media.mp3}}" type="audio/mp3" style="width: 100%; height: 100%;"/>
    {{else}}
      {{#if _media.ogg}}
        <audio src="{{_media.ogg}}" type="audio/ogg" style="width: 100%; height: 100%;"/>
      {{else}}
        <video preload="none" width="640" height="360" poster="{{_media.poster}}" style="width:100%; height:100%;" controls="controls">
          {{#if _media.source}}
            <source src="{{_media.source}}" type="{{_media.type}}"/>
          {{else}}
            <source src="{{_media.mp4}}" type="video/mp4"/>
            <source src="{{_media.ogv}}" type="video/ogg"/>
          {{/if}}
          {{#if _useClosedCaptions}}
              {{#each _media.cc}}
                  <track kind="subtitles" src="{{src}}" type="text/vtt" srclang="{{srclang}}" />
              {{/each}}
          {{/if}}
        </video>
      {{/if}}
    {{/if}}
    </div>
    {{#if _transcript}}
    <div class="media-transcript-container">

      <div class="media-transcript-button-container">
        {{#if _transcript._inlineTranscript}}
          <button class="media-inline-transcript-button button" role="button">
            <div class="transcript-text-container">
              {{#if _transcript.inlineTranscriptButton}}
                {{_transcript.inlineTranscriptButton}}
              {{else}}
                {{_transcript.transcriptLink}}
              {{/if}}
            </div>
          </button>
        {{/if}}
        {{#if _transcript._externalTranscript}}
          <button onclick="window.open('{{_transcript.transcriptLink}}')" class="media-external-transcript-button button" role="button">
            <div class="transcript-text-container">
              {{#if _transcript.transcriptLinkButton}}
                {{_transcript.transcriptLinkButton}}
              {{else}}
                {{_transcript.transcriptLink}}
              {{/if}}
            </div>
          </button>
        {{/if}}
        </div>

        {{#if _transcript._inlineTranscript}}
          <div class="media-inline-transcript-body-container">
            <div class="media-inline-transcript-body">
            {{{a11y_text _transcript.inlineTranscriptBody}}}
            </div>
          </div>
        {{/if}}

    </div>
    {{/if}}
    
</div>
